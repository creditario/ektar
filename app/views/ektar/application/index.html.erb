<nav class="level">
  <div class="level-left">
    <div class="level-item">
      <h2 class="title is-4"><%= model_human_name(resource_class) %><h2>
    </div>
  </div>

  <div class="level-right">
    <div class="level-item">
      <% if super_admin? %>
        <%= link_to new_title, new_resource_path, class: "button is-primary" %>
      <% end %>
    </div>
  </div>
</nav>

<table class="table is-fullwidth is-hoverable">
  <thead>
    <tr>
      <% list_attributes.each do |attribute| %>
        <th>
          <%= resource_class.human_attribute_name(attribute) %>
        </th>
      <% end %>

      <% if super_admin? %>
        <th class="has-text-right"><%= t("table.actions.name") %></th>
      <% end %>
    </tr>
  </thead>

  <%= render partial: "resource", collection: collection, as: :resource %>
</table>

<%= pagy_nav(@pagination).html_safe if @pagination.present? %>
