<label class="label"><%= resource_class.human_attribute_name(attribute_name) %></label>
<% error = form.object.errors[attribute_name].first %>

<div class="control">
  <div class="select">
    <%= form.select "#{attribute_name}".to_sym, options_for_select(options.is_a?(Proc) ? options.call(controller) : options, selected: input_html[:selected] || form.object[attribute_name]), {}, input_html %>
  </div>
  <%= field_help(form.object, field: attribute_name) %>
  <% if error.present? %>
    <p class="help is-danger"><%= error %></p>
  <% end %>
</div>
