<label class="label"><%= resource_class.human_attribute_name(attribute_name) %></label>
<% error = form.object.errors[attribute_name].first %>

<% css_classes = input_html.fetch(:class, "") %>
<% control_classes = css_classes.split(" ").select{|klass| ["upload", "no-upload", "basic-toolbar"].include?(klass)}.join(" ") %>

<div class="control <%= control_classes %>">
  <%= form.rich_text_area attribute_name, input_attributes(attribute_name, :textarea, "#{input_html.delete(:class)} trix-content").deep_merge(input_html)%>
  <% if error.present? %>
    <p class="help is-danger"><%= error %><p/>
  <% end %>
</div>
