<label class="label"><%= resource_class.human_attribute_name(attribute_name) %></label>
<% error = form.object.errors[attribute_name].first %>

<div class="control <%= options.dig(:control, :control_css) %>">
  <%= form.number_field attribute_name, input_attributes(attribute_name, "input input_number", input_html.delete(:class)).deep_merge(input_html) %>
</div>

<%= field_help(form.object, field: attribute_name) %>
<% if error.present? %>
  <p class="help is-danger"><%= error %><p/>
<% end %>
