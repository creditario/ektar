<h2 class='title is-4'><%= t("new_resource", resource_name: model_human_name(resource_class, plural: false)) %></h2>

<div class="columns">
  <div class="column is-half">
    <%= form_with(model: resource, remote: false) do |form|%>
      <% form_attributes.each do |attribute_name, attribute_type|%>
        <div class="field">
          <%= render partial: "#{attribute_type}", locals: { attribute_name: attribute_name, form: form } %>
        </div>
      <% end %>
      <div class='column'><%= render partial: 'submit', locals: {form: form} %></div>
    <% end %>
  </div>
</div>
