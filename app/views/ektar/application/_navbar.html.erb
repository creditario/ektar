<nav class="navbar is-light" role="navigation" aria-label="main navigation">
  <div class="container">
    <div class="navbar-brand">
      <%= link_to root_path, class: "navbar-item" do %>
        <img src="<%= asset_pack_path('media/images/ektar.svg') %>" heigth="25" width="128" />
      <% end %>

      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarMain">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarMain" class="navbar-menu">
      <% if super_admin? %>
        <div class="navbar-item">
          <%= link_to model_human_name(Ektar::Organization), organizations_path, class: "navbar-item" %>
        </div>
        <div class="navbar-item">
          <%= link_to model_human_name(Ektar::Plan), plans_path, class: "navbar-item" %>
        </div>
      <% end %>

      <% if user_signed_in? %>
        <div class="navbar-item">
          <%= link_to model_human_name(Ektar::User), users_path, class: "navbar-item" %>
        </div>
      <% end %>
    </div>

    <div class="navbar-end">
      <% if current_user.organizations.size > 1 %>
        <div class="navbar-item">
          <%= form_for :organization, url: select_organization_index_path, method: :post do |filter_form| %>
            <%= render partial: "ektar/application/select", locals: {
                                                              attribute_name: :organization_id,
                                                              options: current_user.organizations.pluck(:name, :global_id), 
                                                              form: filter_form, 
                                                              input_html: {onchange: "this.form.submit()", selected: current_organization.global_id}} %>
          <% end %>
        </div>
      <% end %>

      <% if user_signed_in? %>
        <div class="navbar-item">
          <%= link_to t(".logout"), session_path(current_user.global_id), method: :delete, class: "navbar-item" %>
        </div>
      <% else %>
        <%= link_to t(".login"), new_session_path, class: "navbar-item" %>
        <%= link_to t(".sign_up"), registration_path , class: "navbar-item" %>
      <% end %>

      <div class="navbar-item">
        <% if super_admin? %>
          <span>Administrador</span>
        <% elsif current_user %>
          <span><%= current_user.email %></span>
        <% end %>
      </div>
    </div>
  </div>
</nav>
