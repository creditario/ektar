<section>
  <div class="container">
    <div>
      <h2>Bienvenido a Ektar</h2>
      <%= form_with model: @resource do |form| %>
        <div class="field">
          <label class="label"><%= form.label :email %></label>
          <div class="control">
            <%= form.text_field :email, class: "input", **input_attributes("email") %>
          </div>
        </div>

        <div class="field">
          <label class="label"><%= form.label :password %></label>
          <div class="control">
            <%= form.password_field :password, class: "input", **input_attributes("password") %>
          </div>
        </div>

        <% @resource.organizations.each do |organization| %>
          <%= form.fields_for :organizations, organization do |organizations_form| %>
            <div class="field">
              <label class="label"><%= organizations_form.label :name %></label>
              <div class="control">
                <%= organizations_form.text_field :name, class: "input" %>
              </div>
            </div>
          <% end %>
        <% end %>

        <div class="field is-grouped">
          <div class="control">
            <%= form.submit class: "button is-primary is-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
