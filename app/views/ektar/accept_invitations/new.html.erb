<div class="container">
  <div class="box">
    <h2><%= t(".title") %></h2>
    <p class="mt-3"><%= t(".info", organization: resource.organization.name) %></p>

    <%= form_with model: resource, url: ektar.accept_invitations_path, method: :patch, local: true do |form| %>
      <%= form.hidden_field :invitation_token %>

      <div class="field is-grouped">
        <div class="control">
          <%= form.submit t("form.accept_invitations.submit", default: t("form.submit")), class: "button is-primary is-medium" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
