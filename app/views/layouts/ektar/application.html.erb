<!DOCTYPE html>
<html>
  <head>
    <title>Ektar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>

  </head>
  <body>
    <% if flash.alert.present? || flash.notice.present? %>
      <div class="notification <%= flash.alert.present? ? 'is-danger' : 'is-primary' %>">
        <button class="delete"></button>
        <p><%= flash.alert || flash.notice %></p>
      </div>
    <% end %>
 
    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
